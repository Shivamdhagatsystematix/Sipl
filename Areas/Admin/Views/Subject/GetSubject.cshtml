@model IEnumerable<Sipl.Areas.Admin.Models.SubjectViewModel>
@{
    ViewBag.Title = "Index";
}
<h2>
    Total Subjects<h2>
        <p>
            @Html.Partial("_CreateButtonPartial")
        </p>
        <table class="table table-striped table ">
            <tr class="success">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SubjectName)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.SubjectId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SubjectId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.SubjectId })
                    </td>
                </tr>
            }
        </table>
