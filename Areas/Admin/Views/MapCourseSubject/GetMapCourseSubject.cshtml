@model IEnumerable<Sipl.DataBase.SubjectInCourse>

@{
    ViewBag.Title = "List of Subjects in Courses";
}

<h2>Index</h2>

<p>
<p>
    <a type="button" class="btn btn-primary btn-sm"
       href="@Url.Action("Index", "Home", new { area = "" })">
        <span class="glyphicon glyphicon-list"></span>
        <span>Back to Main menu</span>
    </a>
    <a type="button" class="btn btn-primary btn-sm"
       href="@Url.Action("CreateSubjectInCourse")">
        <span class="glyphicon glyphicon-plus"></span>
        <span>Map New</span>
    </a>
</p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Courses.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subjects.SubjectName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subjects.SubjectName)
            </td>
            <td>
                @Html.ActionLink( "Edit", "EditSubjectInCourse", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


